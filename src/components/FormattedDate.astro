---
interface Props {
  date: Date | null;
}

const { date } = Astro.props;
---

<!-- Check if date is not null -->
<time if:date datetime={date ? date.toISOString() : undefined}>
  {
    date
      ? date.toLocaleDateString('en-UK', {
          year: 'numeric',
          month: 'short',
          day: 'numeric'
        })
      : 'No Date'
  }
</time>