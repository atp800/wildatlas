---
// Importing necessary components
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
<head>
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Bad+Script&family=Dawning+of+a+New+Day&family=Julius+Sans+One&family=Junge&family=Montserrat&family=Neucha&family=Nothing+You+Could+Do&family=Urbanist:ital,wght@0,100..900;1,100..900&family=Zeyada&display=swap" rel="stylesheet">
	<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  <style>
    .hero-image {
      /* Adjust the path to your hero image accordingly */
      background-image: url('/homepage-image.jpg');
      height: 100vh; /* Make hero image cover the full screen */
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      position: relative; /* Allows absolute positioning within */
    }
	.menu-icon {
		display: none; /* Hide by default */
		font-size: 30px;
		color: white;
		background: none;
		border: none;
		cursor: pointer;
		position: absolute;
		top: 20px;
		right: 20px;
		z-index: 1000;
	}
    .top-right-nav {
      display: flex !important;
      position: absolute;
      top: 0;
      right: 0;
      margin: 20px; /* Adjust based on desired spacing from the corners */
      color: white;
	  font-family: 'Urbanist';
	  font-size: 18px;
      display: flex;
      align-items: center;
      justify-content: flex-end;
	  z-index: 500;
    }
	.top-right-nav a {
		margin-left: 40px; /* Space between links */
		text-decoration: none;
		color: white; /* Adjust if needed to ensure visibility */
	}
	.hidden {
    display: none !important;
    }

	@media (max-width: 768px) {
		.menu-icon {
			display: block; /* Show menu icon */
            position: absolute;
            top: 20px;
            right: 20px;
            z-index: 1000;
		}
		.top-right-nav {
			display: none; /* Hide navigation links */
			flex-direction: column; /* Stack the links vertically */
			position: fixed; /* Fixed position */
			top: 0; right: 0; /* Positioning */
			background-color: rgba(0, 0, 0, 0.9); /* Semi-transparent background */
			width: 150px; /* Width of the sidebar */
			height: 95.2vh;
			justify-content: flex-start; /* Align links to the top */
			padding-top: 50px; /* Space for the menu icon */
			margin-right: 0;
			margin-top: 0;
			border-radius: 15px 0px 0px 15px; /* Rounded corners on the bottom-left */
		}
		.top-right-nav a {
			margin-left: 0px; /* Space between links */
			margin-top: 30px;
			text-decoration: none;
			padding: 0 10px; /* Padding around links for better touch targets on touchscreens */
			color: white; /* Adjust if needed to ensure visibility */
		}
	}
    .overlay {
      background-color: rgba(0, 0, 0, 0.5); /* Black background with opacity */
      color: white;
      width: 100%;
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .hero-text {
      text-align: center;
	  /* font-family: 'Bad Script'; */
	  /* font-family: 'Zeyada'; */
	  /* font-family: 'Dawning of a New Day'; */
	  font-family: 'Nothing You Could Do';
      font-size: 4.2em;
    }
	.logo-container {
    position: absolute;
    top: 0;
    left: 0;
    margin: 20px; /* Adjust based on desired spacing from the corners */
	}
	.logo-container img {
		height: 50px; /* Adjust based on your logo's size */
		width: auto;
	}

  </style>
</head>
<body>
	
  <div class="hero-image">

	<!-- Logo -->
	<div class="logo-container">
        <a href="/"><img src="/atlas2.png" alt="Logo" /></a>
    </div>
	<!-- Menu Icon -->
    <button class="menu-icon" aria-label="Open navigation menu">
        â˜°
    </button>
	<!-- Navigation -->
    <nav class="top-right-nav">
        <a href="/blog">BLOG</a> 
        <a href="/travel">TRAVEL TIPS</a> 
        <a href="/articles">ARTICLES</a> 
        <a href="/reviews">REVIEWS</a> 
        <a href="/about">ABOUT</a>
    </nav>
    <div class="overlay">
        <div class="hero-text">
            Wild Atlas
        </div>
    </div>
  </div>

  <Footer />

  <script>
	document.addEventListener('DOMContentLoaded', () => {
        const menuIcon = document.querySelector('.menu-icon');
        const topRightNav = document.querySelector('.top-right-nav');

        // Function to toggle the top-right navigation
        function toggleNavigation() {
            topRightNav.classList.toggle('hidden');
        }

        // Function to set the default state of the navigation menu
        function setDefaultNavState() {
            if (window.innerWidth <= 768) {
                topRightNav.classList.add('hidden');
            } else {
                topRightNav.classList.remove('hidden');
            }
        }

        // Set the initial state on DOMContentLoaded
        setDefaultNavState();

        // Event listener for the menu icon click
        menuIcon.addEventListener('click', toggleNavigation);

        // Event listener to handle window resize
        window.addEventListener('resize', () => {
            setDefaultNavState();
        });
    });
  </script>
</body>
</html>